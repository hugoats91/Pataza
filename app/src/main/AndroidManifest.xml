<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.pataza">

    <!--Permissions-->
    <application
        android:name="com.app.pataza.PatazaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!--Activities-->
        <activity
            android:name="com.app.pataza.core.navigation.RouteActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.app.pataza.features.login.LoginActivity"/>

        <activity android:name=".features.pets.add.AddPetActivity" />

        <activity android:name=".features.register.RegisterActivity" />
        <activity android:name=".features.menu.MenuActivity" />

        <activity android:name="com.app.pataza.features.movies.MoviesActivity" />

        <activity
            android:name="com.app.pataza.features.movies.MovieDetailsActivity"
            android:theme="@style/AppTheme.Translucent"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.app.pataza.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

</manifest>

